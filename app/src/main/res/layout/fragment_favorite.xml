<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_dimen_120"
            android:background="@drawable/bg_app_bar_cover" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fitsSystemWindows="true"
                app:expanded="true"
                app:liftOnScroll="true"
                app:statusBarForeground="@android:color/transparent">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fitsSystemWindows="true"
                    app:collapsedTitleGravity="center"
                    app:contentScrim="@android:color/transparent"
                    app:layout_scrollFlags="noScroll"
                    app:statusBarScrim="@android:color/transparent"
                    app:title="Hello"
                    app:titleEnabled="false"
                    app:toolbarId="@id/toolbar">

                    <com.google.android.material.appbar.MaterialToolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:visibility="visible"
                        app:contentInsetLeft="@dimen/et_dimen_12"
                        app:contentInsetStart="@dimen/et_dimen_12"
                        app:menu="@menu/menu_favorite_app_bar"
                        app:title="Tủ truyện"
                        app:titleTextColor="@color/color_F1F1F1" />

                    <RelativeLayout
                        android:id="@+id/rl_toolbar_delete"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/et_dimen_12"
                        android:visibility="gone"
                        app:contentInsetEnd="@dimen/et_dimen_12"
                        app:menu="@menu/menu_favorite_app_bar">

                        <CheckBox
                            android:id="@+id/cb_delete"
                            android:layout_width="@dimen/et_dimen_24"
                            android:layout_height="@dimen/et_dimen_24"
                            android:layout_alignParentStart="true"
                            android:layout_marginEnd="@dimen/et_dimen_16"
                            android:background="@drawable/checkbox"
                            android:button="@null" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/cb_delete"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Chọn tất cả"
                            android:textColor="@color/white"
                            android:textSize="@dimen/et_text_size_16" />

                        <ImageView
                            android:id="@+id/iv_button_close"
                            style="?attr/actionButtonStyle"
                            android:layout_width="@dimen/et_dimen_24"
                            android:layout_height="@dimen/et_dimen_24"
                            android:layout_alignParentEnd="true"
                            android:foreground="?attr/actionBarItemBackground"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_close" />

                        <ImageView
                            android:clickable="false"
                            android:id="@+id/iv_button_delete"
                            style="?attr/actionButtonStyle"
                            android:layout_width="@dimen/et_dimen_24"
                            android:layout_height="@dimen/et_dimen_24"
                            android:layout_marginEnd="@dimen/et_dimen_20"
                            android:layout_toStartOf="@id/iv_button_close"
                            android:foreground="?attr/actionBarItemBackground"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_bin_unselected" />

                    </RelativeLayout>

                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_body"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/et_dimen_12"
                android:animateLayoutChanges="true"
                android:background="@drawable/shape_bg_1c1c1e_corner_top_16"
                android:focusable="true"
                android:padding="@dimen/et_dimen_16"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_manga_page"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </FrameLayout>

</layout>