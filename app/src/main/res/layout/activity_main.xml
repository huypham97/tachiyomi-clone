<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.example.tachiyomi_clone.ui.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <FrameLayout
            android:id="@+id/fl_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/bnv_dash_board"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="0.3dp"
            android:background="@color/color_333333"
            app:layout_constraintBottom_toTopOf="@id/bnv_dash_board"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/bnv_dash_board" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bnv_dash_board"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_dimen_64"
            android:background="@color/color_1C1C1E"
            app:itemIconSize="@dimen/et_dimen_24"
            app:itemIconTint="@color/main_nav_color"
            app:itemPaddingTop="@dimen/et_dimen_8"
            app:itemTextAppearanceActive="@style/BottomNavigationView.Active"
            app:itemTextAppearanceInactive="@style/BottomNavigationView.Inactive"
            app:itemTextColor="@color/main_nav_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/menu_bottom_nav" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>