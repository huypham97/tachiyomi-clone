<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/son_bg_trang_chu"
    tools:context=".son_ui.Son_TrangChu">

    <FrameLayout
        android:id="@+id/fl_trangchu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bn_trang_chu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1C1C1E"
        app:itemIconTint="#828282"
        app:itemTextColor="#828282"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/son_menu_navigation" />


</androidx.constraintlayout.widget.ConstraintLayout>