<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_delete"
            android:layout_width="@dimen/et_dimen_24"
            android:layout_height="@dimen/et_dimen_24"
            android:layout_marginEnd="@dimen/et_dimen_16"
            android:background="@drawable/checkbox"
            android:button="@null"
            android:visibility="gone" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_manga_thumbnail"
            android:layout_width="@dimen/et_dimen_80"
            android:layout_height="@dimen/et_dimen_118"
            android:elevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/et_corner_6"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/iv_manga_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/et_dimen_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_manga_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="2"
                android:textColor="@color/color_F1F1F1"
                android:textSize="@dimen/et_text_size_16"
                tools:text="Tên truyện 2 dòng như sau bala bala Tên truyện 2 dòng như sau bala bala Tên truyện 2 dòng như sau bala bala Tên truyện 2 dòng như sau bala bala" />

            <TextView
                android:id="@+id/tv_manga_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/et_dimen_16"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="1"
                android:textColor="@color/color_828282"
                android:textSize="@dimen/et_text_size_12"
                tools:text="Tác giả: Tên Tác Giả" />

        </LinearLayout>

    </LinearLayout>

</layout>