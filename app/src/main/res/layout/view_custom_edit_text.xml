<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rl_et_edit_text_view_container"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@drawable/shape_bg_1c1c1e_corner_16">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_et_edit_text_view_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:textColorHint="@color/color_999999"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:endIconDrawable="@drawable/ic_delete"
            app:endIconMode="clear_text"
            app:endIconTint="@null"
            app:endIconTintMode="multiply"
            app:hintTextAppearance="@style/EditTextHintStyle"
            tools:hint="HUY HUY">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_edit_text_view_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto_regular"
                android:gravity="top|start"
                android:paddingHorizontal="@dimen/et_dimen_12"
                android:paddingVertical="@dimen/et_dimen_8"
                android:scrollbars="vertical"
                android:textColor="@color/color_F1F1F1"
                android:textColorHint="@color/color_999999"
                android:textCursorDrawable="@drawable/bg_text_cursor"
                android:textSize="@dimen/et_text_size_14" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/iv_end_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|end|right"
            android:background="?attr/actionBarItemBackground"
            android:minWidth="@dimen/et_dimen_48"
            android:minHeight="@dimen/et_dimen_48"
            android:scaleType="center"
            tools:ignore="Overdraw" />

    </RelativeLayout>

</layout>
