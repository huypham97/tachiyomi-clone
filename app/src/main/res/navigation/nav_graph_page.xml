<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_page"
    app:startDestination="@id/navigation_manga_page">

    <fragment
        android:id="@+id/navigation_manga_page"
        android:name="com.example.tachiyomi_clone.ui.page.detail.MangaPageDetailFragment"
        tools:layout="@layout/fragment_manga_page_detail">

        <action
            android:id="@+id/action_manga_page_to_manga"
            app:destination="@+id/nav_graph_manga"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/nav_exit_anim"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <include app:graph="@navigation/nav_graph_manga" />

</navigation>